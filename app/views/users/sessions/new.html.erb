<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="text-center">Log in</h2>
    <div class="field form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:'form-control' %>
    </div>

    <div class="actions form-group">
      <%= f.submit "Log in", class: 'btn btn-primary btn-block'%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  <% end %>
  <p class="text-center">--------- OR ---------</p>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), :class => 'navbar-link btn btn-success btn-block' %><br />
  <% end %>

</div>
</body>
</html>